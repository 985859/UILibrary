<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|left"
    android:minHeight="40dp"
    android:orientation="horizontal"
    tools:ignore="RtlHardcoded"
    android:id="@+id/titleLayot">



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        tools:ignore="RtlHardcoded,UseCompoundDrawables">

        <ImageView
            android:id="@+id/titleView_IMG"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="4dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/titleView_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:gravity="center|left"
            android:minHeight="30dp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/title_Size2"
            tools:ignore="InefficientWeight,NestedWeights,RtlHardcoded" />
    </LinearLayout>

    <TextView
        android:id="@+id/titleView_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left"
        android:minHeight="30dp"
        android:textColor="@color/textColor"
        android:textSize="@dimen/title_Size2"
        tools:ignore="InefficientWeight,NestedWeights,RtlHardcoded" />

    <TextView
        android:id="@+id/titleView_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:gravity="center|left"
        android:maxWidth="110dp"
        android:textColor="@color/contentColor"
        android:textSize="@dimen/content_Size"
        tools:ignore="RtlHardcoded" />

    <ImageView
        android:id="@+id/titleView_next"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/next"
        android:contentDescription=""
        android:visibility="gone"
        tools:ignore="ContentDescription,RtlHardcoded" />
</LinearLayout>
