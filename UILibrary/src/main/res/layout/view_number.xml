<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <com.mylibrary.api.widget.VariedTextView
        android:id="@+id/number_Minus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="－"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:attr_background="#d5d5d5"
        app:attr_bottomLeftRadius="4dp"
        app:attr_topLeftRadius="4dp" />

    <com.mylibrary.api.widget.VariedTextView
        android:id="@+id/number_Text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:inputType="number"
        android:minWidth="24dp"
        android:text="1"
        android:textColor="@color/textColor"
        android:textSize="@dimen/text_Size"
        app:attr_strokeColor="#d5d5d5"
        app:attr_strokeWidth="2px" />

    <com.mylibrary.api.widget.VariedTextView
        android:id="@+id/number_Plus"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:gravity="center"
        android:text="＋"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        app:attr_background="#d5d5d5"
        app:attr_bottomRightRadius="4dp"
        app:attr_topRightRadius="4dp" />
</LinearLayout>